{% extends "base.twig" %}

{% block content %}
    <div class="section blog">
        <div class="wrapper flex-container">
            <main class="blog__main">
                <h1 class="blog__title">{{title}}</h1>

                <div class="blog__posts">
                    {% for post in posts %}
                        {% include 'teaser.twig' %}
                    {% endfor %}
                </div> <!-- blog__posts -->

                {% include 'navigation.twig' %}

            </main> <!-- blog__main -->

            <div class="blog__sidebar">
                {{sidebar}}
            </div> <!-- blog__sidebar -->

        </div> <!-- wrapper -->
    </div>
{% endblock %}